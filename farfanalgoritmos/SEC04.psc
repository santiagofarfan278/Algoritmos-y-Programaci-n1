Algoritmo SEC04
	Definir n1, n2 Como Entero
	Definir r1, r2, r3  Como Entero
	Definir r4 Como Real
	Escribir 'Introduzca un número entero: '
	Leer n1
	Escribir 'Introduzca otro número entero: '
	Leer n2
	r1 <- n1+n2
	r2 <- n1-n2
	r3 <- n1*n2
	r4 <- n1/n2
	Escribir 'La suma es: ', r1
	Escribir 'La resta es: ', r2
	Escribir 'La multiplicación es: ', r3
	Escribir 'La divison es: ', r4
FinAlgoritmo
